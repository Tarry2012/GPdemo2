<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://www.springframework.org/schema/context
  http://www.springframework.org/schema/context/spring-context-3.1.xsd
  http://www.springframework.org/schema/mvc
  http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">

    <!--激活@Required @Autowired @Resource等标注-->
    <context:annotation-config/>
    <!--自动扫包-->
    <context:component-scan base-package="controller"/>
    <context:component-scan base-package="common"/>

    <!-- 扩充了注解驱动，可以将请求参数绑定到控制器参数 -->
    <mvc:annotation-driven/>

    <!-- 静态资源处理  css js imgs -->
    <mvc:resources location="/resources/" mapping="/resources/**"/>


    <!--定义跳转的文件的前后缀，视图模式配置-->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <!-- 拼接 -->
        <property name="prefix" value="/" />
        <property name="suffix" value=".jsp" />
    </bean>

    <!--设置登录拦截器 -->
    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/**" />
            <mvc:exclude-mapping path="/resources/css/*"/>
            <mvc:exclude-mapping path="/resources/images/*"/>
            <mvc:exclude-mapping path="/resources/js/*"/>
            <bean class="common.interceptor.SystemloginInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>

</beans>